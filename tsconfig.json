{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "declaration": true,

      "preserveSymlinks": true,
  
      "preserveWatchOutput": true,
      "pretty": false,
  
      "forceConsistentCasingInFileNames": true,
  
      "noFallthroughCasesInSwitch": true,
      // "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true
    },
  "files": [
    "./src.ts/index.ts"
  ]
}